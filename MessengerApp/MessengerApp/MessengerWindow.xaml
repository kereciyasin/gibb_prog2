<Window x:Class="MessengerApp.MessengerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="LblTitle" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0,0,0,10"/>
        <ListBox Name="ChatList" Grid.Row="1" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBox Name="MsgInput" Width="260" Height="30" Margin="0,0,10,0"/>
            <Button Content="Senden" Width="80" Height="30" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>